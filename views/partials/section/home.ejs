<section>
    <h1>Hello</h1>
    <table class="file-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <% if (files.length === 0) { %>
                <tr>
                    <td colspan="2">No files uploaded.</td>
                </tr>
            <% } else { %>
                <% files.forEach(file => { %>
                    <tr>
                        <td><%= file.fileName %></td>
                        <td><%= file.createdAt.toLocaleString() %></td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
</section>
<section>
    <h2>Your Folders</h2>
    <ul>
        <% if (folders.length === 0) { %>
            <li>No folders created.</li>
        <% } else { %>
            <% folders.forEach(folder => { %>
                <li>
                    <a href="/folders/<%= folder.id %>"><%= folder.name %></a>
                    <button onclick="editFolder('<%= folder.id %>', '<%= folder.name %>')">Edit</button>
                    <button onclick="deleteFolder('<%= folder.id %>')">Delete</button>
                </li>
            <% }) %>
        <% } %>
    </ul>
</section>
