generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models
model Session {
  id         String   @id
  sid        String   @unique
  data       String
  expiresAt  DateTime
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  files     File[]    @relation("UserFiles")
  folders   Folder[]  @relation("UserFolders")
}

model File {
  id        Int      @id @default(autoincrement())
  fileName  String
  path      String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation("UserFiles", fields: [userId], references: [id])
  folder    Folder?   @relation("FolderFiles", fields: [folderId], references: [id])
  folderId  Int?
}

model Folder {
  id        Int       @id @default(autoincrement())
  name      String
  userId    Int
  user      User      @relation("UserFolders", fields: [userId], references: [id])
  files     File[]    @relation("FolderFiles")
  createdAt DateTime  @default(now())
}
